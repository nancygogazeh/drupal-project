<!--  Start About me section -->
<div class="home-about-area pt-90 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="about-content">
                    <h3>{{content.field_title.0}}</h3>
                    {{content.field_content.0}}
                    <a href="{{content.field_link.0['#url']}}" target="_blank" class="btn">
                        {{content.field_link.0['#title']}}
                    </a>
                </div>
            </div>
            <div class="col-lg-6 hidden-md hidden-sm">
                <div class="about-featured-image">
                    <img src="{{ file_url(content.field_image['#items'].entity.uri.value)}}"
                   class="img-fluid" 
                   alt="{{ content.field_image['#items'].alt }}" 
                   title="{{ content.field_image['#items'].title }}">
                </div>
            </div>
        </div>
    </div>
</div>
<!--  End about me section -->